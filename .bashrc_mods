HISTSIZE=10000
HISTFILESIZE=10000

if [[ $SHELL = "/bin/bash" ]]; then
	source /etc/bash_completion;
fi;

if [ -f ~/.bashrc_local ]; then
	. ~/.bashrc_local;
fi
if [ -f ~/.bash_aliases ]; then
	. ~/.bash_aliases;
fi
if [ -f ~/.bash_aliases_local ]; then
	. ~/.bash_aliases_local;
fi

export PS1="[\u \W]$ "

# Stop Ctrl+S from freezing terminal
stty -ixon
